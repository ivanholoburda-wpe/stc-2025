{
  "name": "hackathon",
  "version": "1.0.0",
  "description": "Electron + React (Vite) + Express starter",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron .",
    "dev": "run-p dev:renderer dev:electron",
    "dev:renderer": "vite --config renderer/vite.config.js",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "build:main": "tsc",
    "build": "run-s build:main build:renderer build:electron",
    "build:renderer": "vite build --config renderer/vite.config.js",
    "build:electron": "electron-builder -mwl --dir",
    "pack:win": "electron-builder -w",
    "pack:mac": "electron-builder -m",
    "pack:linux": "electron-builder -l",
    "typeorm": "typeorm-ts-node-commonjs -d ./backend/src/database/data-source.ts",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.2",
    "cross-env": "^7.0.3",
    "electron": "^38.2.2",
    "electron-builder": "^24.13.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.0",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.hackathon",
    "productName": "HackathonApp",
    "files": [
      "dist/**",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "dist/index.js"
    },
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icons"
    }
  }
}
